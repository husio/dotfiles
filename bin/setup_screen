#!/bin/bash

if [[ `xrandr | grep VGA1  | wc -l` -eq 1 ]]
then
    xrandr \
        --output VGA1 \
            --mode $(xrandr | grep VGA -A 1 | tail -n 1 | awk -e '{print $1}') \
	--output LVDS1 \
	    --off
else
    xrandr \
	--output VGA1 \
	    --off \
        --output LVDS1 \
            --mode $(xrandr | grep LVDS -A 1 | tail -n 1 | awk -e '{print $1}')
fi



/home/piotr/.bin/setup_keyboard

feh --bg-center ~/.wallpaper.png
