#!/bin/sh



modes="laptop only\nexternal only\nboth"
choice=`echo $modes | dmenu -p display`

case  $choice in
	"laptop only")
		xrandr \
			--output eDP --auto \
			--output HDMI-A-0 --off \
			--output DisplayPort-0 --off \
			--output DisplayPort-1 --off
		;;
	"external only")
		external=` xrandr | grep ' connected' | grep -v eDP | cut -d ' ' -f1 `
		if [ x != x"$external" ]
		then
			xrandr \
				--output $external --auto \
				--output eDP --off
		fi
		;;
	"both")
		external=` xrandr | grep ' connected' | grep -v eDP | cut -d ' ' -f1 `
		if [ x != x"$external" ]
		then
			xrandr \
				--output $external --auto \
				--output eDP --left-of $external --auto
		fi
		;;
	"*")
		echo "Unknown choice $choice"
		exit 2
		;;
esac

feh --bg-center ~/.wallpaper.png

