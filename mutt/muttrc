source ~/.mutt/muttrc.global

set sendmail="/usr/bin/msmtp"

set from="phusiatynski@gmail.com"

set mbox_type=Maildir
set folder=~/.Mail
set record=+sent
set postponed=+TODO
mailboxes \
        +phusiatynski +wsisiz \
        +trash +arch +sent \
        +python +rootnode +TODO 

# set send account
macro generic "<esc>1" ":set from='Piotr Husiatyński <phusiatynski@gmail.com>'  sendmail='/usr/bin/msmtp -a phusiatynski@gmail.com"
macro generic "<esc>2" ":set from='Piotr Husiatyński <piotrhusiatynski@gmail.com>' sendmail='/usr/bin/msmtp -a piotrhusiatynski@gmail.com'"
macro generic "<esc>3" ":set from='Piotr Husiatyński <husiatyn@wit.edu.pl>' sendmail='/usr/bin/msmtp -a husiatyn@wit.edu.pl'"
macro generic "<esc>4" ":set from='Piotr Husiatyński <husio@o2.pl>' sendmail='/usr/bin/msmtp -a husio@o2.pl'"

macro index G '!/home/piotrek/.getmail/getmail.sh'
macro pager G '!/home/piotrek/.getmail/getmail.sh'


send2-hook . 'set sendmail="/usr/bin/msmtp"'

