general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "battery 0"
order += "volume master"
order += "cpu_temperature 0"
order += "load"
order += "tztime local"

wireless wlan0 {
        format_up = " wlan: (%quality at %essid, %bitrate) %ip "
        format_down = " wlan: down "
}

ethernet eth0 {
        format_up = " eth: %ip (%speed) "
        format_down = " eth: down "
}

battery 0 {
        format = " %status %percentage %remaining %emptytime "
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
        format = " %Y-%m-%d  %H:%M:%S "
}

load {
        format = " load: %5min "
}

cpu_temperature 0 {
        format = " temp: %degreesÂ°C "
        path = "/sys/devices/platform/coretemp.0/temp2_input"
}

volume master {
        format = " vol: %volume "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
